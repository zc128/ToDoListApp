@model ToDoListApp.Models.ToDoItem

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>ToDoItem</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.UserEmail)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UserEmail)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class = "col-sm-10" id="titleID">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AddedDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AddedDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DueDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DueDate)
        </dd>
        <dt class = "col-sm-2">
            Status
            @*@Html.DisplayNameFor(model => model.Done)*@
        </dt>
        <dd class = "col-sm-10">            
            @Html.DisplayFor(model => model.Done)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DoneDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DoneDate)
        </dd>
    </dl>
</div>
<dialog id="clipboardPerms">
    <h4>We need permission for accessing your clipboard</h4>
</dialog>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ToDoItemID">Edit</a> |
    <a asp-action="Index">Back to List</a>
    <br/>
    <input type="button" hidden id="copyToClipboard" value="Copy Title to Clipboard" class="btn-success" style="margin-top:20px"/>
</div>
<dialog id="copyTitleSuccess">
    <h3>Copied current To-Do title to clipboard successfully!</h3>
</dialog>